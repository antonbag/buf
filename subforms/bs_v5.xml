<?xml version="1.0" encoding="UTF-8"?>

<form>
    
                
				<field name="buf_bootstrap_js"
					type="radio"  
					default="custom" 
					class="btn-group" 
					label="TPL_BUF_LOAD_BOOSTRAP" 
					description="TPL_BUF_LOAD_BOOSTRAP_DESC">
					<option value="0">None</option>
					<option value="joomla">Joomla</option>
					<option value="custom">Custom</option>
				</field>

				<field name="buf_bs_defer" 
					type="radio" 
					default="1" 
					class="btn-group" 
					label="TPL_BUF_LOAD_BS_DEFER" 
					description="TPL_BUF_LOAD_BS_DEFER_DESC"
					showon="buf_bootstrap_js:custom"
					>
					<option value="0">None</option>
					<option value="1">TPL_BUF_DEFER</option>
					<option value="2">TPL_BUF_ASYNC</option>
					<!--<option value="3">TPL_BUF_BOTH</option>-->
				</field>

				<field name="buf_bs_selector"
					type="list" 
					default="recommended" 
					class="btn-group" 
					label="TPL_BUF_BS_SELECTOR" 
					description="TPL_BUF_BS_SELECTOR_DESC">
					<option value="none">None</option>
					<option value="minimum">TPL_BUF_BS_MINIMUM</option>
					<option value="recommended">TPL_BUF_BS_RECOMMENDED</option>
					<option value="all">TPL_BUF_BS_ALL</option>
					<option value="custom">TPL_BUF_BS_CUSTOM</option>
				</field>
<!--function.scss siempre-->
				<field name="buf_bs_files" 
					type="groupedlist" 
					default='["functions","variables","mixins","root", "containers", "grid", "utilities","reboot","type", "images","tables","buttons","button-group","card","close", "dropdown","forms","list-group","nav","navbar","pagination","transitions"]'
					multiple="true" 
					label="TPL_BUF_BOOTSTRAP4_FILES" 
					description="TPL_BUF_BOOTSTRAP4_FILES_DESC"
	
				>
				  
				  	<!--<option value="minimum">Minimum</option>
				  	<option value="recommended">Recomended</option>-->

					<group label="Core variables and mixins">
						<option value="functions">functions</option>
						<option value="variables">variables</option>
						<option value="mixins">mixins</option>
						<option value="root">root</option>
					</group>

					<group label="Layout">
						<option value="containers">containers</option>
						<option value="grid">grid</option>
						
						<!--<option value="media">media</option>-->
						<option value="utilities">utilities</option>
					</group>

					<group label="Content">
						<option value="reboot">reboot</option>
						<option value="type">type</option>
						<option value="images">images</option>
						
					</group>

					<group label="Components">
						<option value="tables">tables</option>
						<option value="accordion">accordion</option>
						<option value="alert">alert</option>
						<option value="badge">badge</option>
						<option value="breadcrumb">breadcrumb</option>
						<option value="buttons">buttons</option>
						<option value="button-group">button-group</option>
						<option value="card">card</option>
						<option value="carousel">carousel</option>
						<option value="close">close</option>
						<option value="dropdown">dropdown</option>
						<option value="forms">forms</option>
						<option value="list-group">list-group</option>
						<option value="modal">modal</option>
						<option value="nav">nav</option>
						<option value="navbar">navbar</option>
						
						<option value="pagination">pagination</option>
						<option value="popover">popover</option>
						<option value="carousel">carousel</option>
						<option value="progress">progress</option>
						
						<option value="toasts">toasts</option>
						<option value="tooltip">tooltip</option>
						<option value="transitions">transitions</option>
						<option value="spinners">spinners</option>
						<option value="offcanvas">offcanvas</option>
			
		

					</group>

					<group label="Helpers">
						<option value="helpers">helpers</option>
					</group>

				</field>

                
                </form>
